topic_branch_list()
{
    git branch | sed -n -e 's/^..//;/topic/p'
}


topic_branch_rebase()
{
    local branch

    while read "branch"; do
        git rebase --onto master remaster "${branch}"
    done
}

topic_branch_list | topic_branch_rebase

### End of file `rebase'
